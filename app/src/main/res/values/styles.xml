<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="user_selection_rectangle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:background">@drawable/button_rectangular_stroke_background</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="user_selection_submit_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:background">@color/unselected_submit_button_background</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/unselected_submit_button_text</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="cast_poster_collapsed">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">110dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="contentDescription">@string/cast_poster_content_desc</item>
        <item name="layout_constraintTop_toBottomOf">parent</item>
    </style>

    <style name="cast_poster_expanded">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">110dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="contentDescription">@string/cast_poster_content_desc</item>
        <item name="layout_constraintBottom_toTopOf">@id/cast1</item>
        <item name="layout_constraintTop_toBottomOf">@id/castHeader</item>
    </style>

    <style name="cast_poster_name_collapsed">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">italic</item>
        <item name="layout_constraintTop_toBottomOf">parent</item>
    </style>

    <style name="cast_poster_name_expanded">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">italic</item>
    </style>

</resources>